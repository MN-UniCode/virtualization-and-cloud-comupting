        "title": "All Logs Count",
        "targets": [
          {
            "datasource": "Loki",
            "expr": "sum(count_over_time({container_name=\"$container\"} [1h]))"
          }
        ],
        "gridPos": { "x": 24, "y": 8, "w": 4, "h": 4 },
        "fieldConfig": {
          "defaults": {
